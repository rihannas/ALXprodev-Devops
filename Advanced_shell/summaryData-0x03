#!/bin/bash

# Directory containing PokÃ©mon JSON files
DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through all JSON files and extract name, height, weight
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | awk '{print toupper(substr($0,1,1)) tolower(substr($0,2))}')
    height_dm=$(jq -r '.height' "$file")  # height in decimeters
    weight_hg=$(jq -r '.weight' "$file")  # weight in hectograms
    
    # Convert height to meters, weight to kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight_hg / 10}")
    
    echo "$name,$height_m,$weight_kg" >> "$REPORT_FILE"
done

echo "CSV Report generated at: $REPORT_FILE"
echo

# Display CSV
cat "$REPORT_FILE"
echo

# Calculate averages using awk (skip header with NR>1)
awk -F, 'NR>1 {total_h += $2; total_w += $3; count++}
END {
    printf "\nAverage Height: %.2f m\n", total_h/count
    printf "Average Weight: %.2f kg\n", total_w/count
}' "$REPORT_FILE"
