#!/bin/bash

# Create the CSV header
echo "Name,Height (m),Weight (kg)" > pokemon_report.csv

# Loop through each JSON file and extract data
for file in pokemon_data/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/\b\(.\)/\u\1/g')  # Capitalize first letter
    height=$(jq '.height' "$file")
    weight=$(jq '.weight' "$file")

    # Convert height to meters (height is in decimetres) and weight to kg (weight is in hectograms)
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    echo "$name,$height_m,$weight_kg" >> pokemon_report.csv
done

# Print CSV location
echo "CSV Report generated at: pokemon_report.csv"
echo ""

# Show CSV
cat pokemon_report.csv
echo ""

# Use awk to calculate averages without sed
awk -F, 'NR>1 {height_sum+=$2; weight_sum+=$3; count++}
END {
    printf "Average Height: %.2f m\n", height_sum/count
    printf "Average Weight: %.2f kg\n", weight_sum/count
}' pokemon_report.csv
